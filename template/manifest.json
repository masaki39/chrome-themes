{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Your Theme Name",
  "description": "A brief description of your Chrome theme",
  "author": "Your Name",
  "theme": {
    "colors": {
      // ====================
      // FRAME COLORS
      // ====================
      // Main browser frame background color (RGB array format)
      "frame": [
        0,
        0,
        0
      ],
      // Frame background when Chrome window is inactive
      "frame_inactive": [
        0,
        0,
        0
      ],
      // Frame background in incognito mode
      "frame_incognito": [
        0,
        0,
        0
      ],
      // Frame background when incognito window is inactive
      "frame_incognito_inactive": [
        0,
        0,
        0
      ],
      // ====================
      // TOOLBAR COLORS
      // ====================
      // Main toolbar background (address bar area)
      "toolbar": [
        0,
        0,
        0
      ],
      // Text color on the toolbar
      "toolbar_text": [
        255,
        255,
        255
      ],
      // Toolbar button icon color
      "toolbar_button_icon": [
        255,
        255,
        255
      ],
      // ====================
      // TAB COLORS
      // ====================
      // Background color of active/selected tab
      "tab_background_text": [
        255,
        255,
        255
      ],
      // Text color on inactive tabs
      "tab_text": [
        255,
        255,
        255
      ],
      // Background color of inactive tabs
      "background_tab": [
        0,
        0,
        0
      ],
      // Text color on inactive tabs (alternative property)
      "background_tab_text": [
        255,
        255,
        255
      ],
      // Background of inactive tabs when window is inactive
      "background_tab_inactive": [
        0,
        0,
        0
      ],
      // Background of inactive tabs in incognito mode
      "background_tab_incognito": [
        0,
        0,
        0
      ],
      // Background of inactive tabs when incognito window is inactive
      "background_tab_incognito_inactive": [
        0,
        0,
        0
      ],
      // ====================
      // NEW TAB PAGE (NTP) COLORS
      // ====================
      // Background color of the New Tab Page
      "ntp_background": [
        0,
        0,
        0
      ],
      // Main text color on New Tab Page
      "ntp_text": [
        255,
        255,
        255
      ],
      // Link color on New Tab Page
      "ntp_link": [
        100,
        150,
        255
      ],
      // Color of section borders/headers on NTP
      "ntp_section": [
        50,
        50,
        50
      ],
      // Text color for section headers on NTP
      "ntp_section_text": [
        255,
        255,
        255
      ],
      // Header text color on NTP (e.g., "Apps", "Most visited")
      "ntp_header": [
        255,
        255,
        255
      ],
      // ====================
      // OMNIBOX (ADDRESS BAR) COLORS
      // ====================
      // Background color of the omnibox/address bar
      "omnibox_background": [
        255,
        255,
        255
      ],
      // Text color in the omnibox
      "omnibox_text": [
        0,
        0,
        0
      ],
      // Background color of omnibox search results dropdown
      "omnibox_results_background": [
        255,
        255,
        255
      ],
      // Hover background color for omnibox results
      "omnibox_results_background_hovered": [
        230,
        230,
        230
      ],
      // Selected background color for omnibox results
      "omnibox_results_background_selected": [
        200,
        200,
        200
      ],
      // Text color in omnibox results
      "omnibox_results_text": [
        0,
        0,
        0
      ],
      // Text color for hovered omnibox results
      "omnibox_results_text_hovered": [
        0,
        0,
        0
      ],
      // Text color for selected omnibox results
      "omnibox_results_text_selected": [
        0,
        0,
        0
      ],
      // URL text color in omnibox results
      "omnibox_results_url": [
        0,
        100,
        200
      ],
      // URL text color when hovered in omnibox results
      "omnibox_results_url_hovered": [
        0,
        100,
        200
      ],
      // URL text color when selected in omnibox results
      "omnibox_results_url_selected": [
        0,
        100,
        200
      ],
      // Dimmed text color in omnibox results (for secondary text)
      "omnibox_results_text_dimmed": [
        100,
        100,
        100
      ],
      // Dimmed text color when hovered
      "omnibox_results_text_dimmed_hovered": [
        100,
        100,
        100
      ],
      // Dimmed text color when selected
      "omnibox_results_text_dimmed_selected": [
        100,
        100,
        100
      ],
      // ====================
      // BUTTON & CONTROL COLORS
      // ====================
      // Background color for buttons
      "button_background": [
        100,
        100,
        100
      ],
      // Background color for control buttons (window controls, etc.)
      "control_button_background": [
        100,
        100,
        100
      ],
      // ====================
      // BOOKMARK BAR COLORS
      // ====================
      // Text color for bookmark bar items
      "bookmark_text": [
        255,
        255,
        255
      ],
      // ====================
      // SIDEBAR COLORS
      // ====================
      // Background color of the sidebar
      "sidebar_background": [
        0,
        0,
        0
      ],
      // Text color in the sidebar
      "sidebar_text": [
        255,
        255,
        255
      ],
      // Border color for the sidebar
      "sidebar_border": [
        50,
        50,
        50
      ],
      // ====================
      // TAB STRIP COLORS
      // ====================
      // Background color of the entire tab strip area
      "tab_background": [
        0,
        0,
        0
      ],
      // Background color of the tab strip when window is inactive
      "tab_background_inactive": [
        0,
        0,
        0
      ],
      // Background color of the tab strip in incognito mode
      "tab_background_incognito": [
        0,
        0,
        0
      ],
      // Background color of the tab strip when incognito window is inactive
      "tab_background_incognito_inactive": [
        0,
        0,
        0
      ]
    },
    "images": {
      // ====================
      // FRAME IMAGES
      // ====================
      // Image overlaid on the frame (PNG format, relative path)
      "theme_frame": "images/theme_frame.png",
      // Overlay image when window is inactive
      "theme_frame_inactive": "images/theme_frame_inactive.png",
      // Overlay image in incognito mode
      "theme_frame_incognito": "images/theme_frame_incognito.png",
      // Overlay image when incognito window is inactive
      "theme_frame_incognito_inactive": "images/theme_frame_incognito_inactive.png",
      // ====================
      // TOOLBAR IMAGES
      // ====================
      // Background image for the toolbar
      "theme_toolbar": "images/theme_toolbar.png",
      // ====================
      // TAB IMAGES
      // ====================
      // Background image for the tab bar
      "theme_tab_background": "images/theme_tab_background.png",
      // Background image for inactive tabs in incognito mode
      "theme_tab_background_incognito": "images/theme_tab_background_incognito.png",
      // ====================
      // NEW TAB PAGE IMAGES
      // ====================
      // Background image for the New Tab Page
      "theme_ntp_background": "images/ntp_background.png",
      // ====================
      // BUTTON IMAGES
      // ====================
      // Background image for buttons
      "theme_button_background": "images/button_background.png",
      // Background image for the window control buttons
      "theme_window_control_background": "images/window_control_background.png"
    },
    "tints": {
      // ====================
      // TINT ARRAYS
      // HSL format: [hue (0-1), saturation (0-1), lightness (0-1)]
      // ====================
      // Tint applied to buttons (HSL values as decimals)
      "buttons": [
        0.0,
        0.0,
        0.0
      ],
      // Tint applied to the frame
      "frame": [
        0.0,
        0.0,
        0.0
      ],
      // Tint applied when window is inactive
      "frame_inactive": [
        0.0,
        0.0,
        0.0
      ],
      // Tint applied to the frame in incognito mode
      "frame_incognito": [
        0.0,
        0.0,
        0.0
      ],
      // Tint applied when incognito window is inactive
      "frame_incognito_inactive": [
        0.0,
        0.0,
        0.0
      ],
      // Tint applied to background tabs
      "background_tab": [
        0.0,
        0.0,
        0.0
      ]
    },
    "properties": {
      // ====================
      // BACKGROUND PROPERTIES
      // ====================
      // Alignment of NTP background image
      // Values: "top", "bottom", "left", "right", "center"
      "ntp_background_alignment": "center",
      // Repeat mode for NTP background image
      // Values: "no-repeat", "repeat", "repeat-x", "repeat-y"
      "ntp_background_repeat": "no-repeat",
      // Use white Google logo on dark themes (0 = colored logo, 1 = white logo)
      "ntp_logo_alternate": 0
    }
  }
}
